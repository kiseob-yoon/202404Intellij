{{>layout/header}}

<h1>게시글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form action="saves" method="POST"> <!-- form 요소의 method를 POST로 설정 -->
            <div class="form-group">
                <label for="title">아이디</label>
                <input type="text" class="form-control" id="prod_id" name="prod_id" placeholder="제목을 입력하세요"> <!-- name 속성 추가 -->
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="prod_name" name="prod_name" placeholder="작성자를 입력하세요"> <!-- name 속성 추가 -->
            </div>
            <div class="form-group">
                <label for="content"> 가격 </label>
                <textarea class="form-control" id="prod_price" name="prod_price" placeholder="내용을 입력하세요"></textarea> <!-- name 속성 추가 -->
            </div>

            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="submit" class="btn btn-primary" id="btn-save">등록</button>
        </form>
    </div>
</div>

{{>layout/footer}}
